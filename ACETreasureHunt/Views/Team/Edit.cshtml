
<link href="@Url.Content("~/Content/home.css")" rel="stylesheet" type="text/css" />

@model ACETreasureHunt.Models.Team

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container abc white">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="container" style="margin-top:-20px">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Edit Team details<small>..!</small></h3>
			 			</div>
			 			<div class="panel-body">
			    		<form role="form">
			    			<div class="form-group">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Team Name" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })			    			
			    			</div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })	
                            </div>
			    			<div class="form-group">
                                @Html.DropDownList("EventID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EventID, "", new { @class = "text-danger" })
                                			 
			    			</div>
			    			
			    			<input type="submit" value="Save" class="btn btn-info btn-block" />
			    		
			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

</div>

